{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "go opentelemetry packages and libraries",
      "groupSlug": "opentelemetry-go and libraries",
      "matchDatasources": [
        "go"
      ],
      "matchPackageNames": [
        "github.com/XSAM/otelsql",
        "go.opentelemetry.io/{/,}**"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
